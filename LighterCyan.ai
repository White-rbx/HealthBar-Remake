    pcall(updateCanvas)
end

local function send_mesg(text, lifespan)
    if type(mesg) == "function" then
        pcall(mesg, text, lifespan or 60, 230,230,230, 0,0,0)
    else
        pcall(createMesg, text)
    end
    pcall(updateCanvas)
end

-- BUTTON HANDLERS (ตามที่คุณบอก)
if send and typeof(send.MouseButton1Click) == "RBXScriptSignal" then
    send.MouseButton1Click:Connect(function()
        pcall(function()
            if box and box:IsA("TextBox") then
                local txt = tostring(box.Text or "")
                if txt:match("%S") then
                    -- เรียก plr(text,60)
                    send_plr(txt, 60)
                    -- ล้าง box
                    pcall(function() box.Text = "" end)
                    -- train, read a2, think, reply AI
                    pcall(TrainFromScroll)
                    local latest = ReadLatestA2() or ""
                    local reply = Think(txt, latest)
                    send_ai(reply, 60)
                    pcall(updateCanvas)
                end
            end
        end)
    end)
end

-- Enter ส่งด้วย
if box and box:IsA("TextBox") then
    box.FocusLost:Connect(function(enter)
        if enter then
            pcall(function()
                local txt = tostring(box.Text or "")
                if txt:match("%S") then
                    send_plr(txt, 60)
                    pcall(function() box.Text = "" end)
                    pcall(TrainFromScroll)
                    local latest = ReadLatestA2() or ""
                    local reply = Think(txt, latest)
                    send_ai(reply, 60)
                    pcall(updateCanvas)
                end
            end)
        end
    end)
end

-- clear: ตั้ง Ask.Text = ""
if clear and typeof(clear.MouseButton1Click) == "RBXScriptSignal" then
    clear.MouseButton1Click:Connect(function()
        pcall(function()
            if box and box:IsA("TextBox") then box.Text = "" end
            pcall(updateCanvas)
        end)
    end)
end

-- rec: ลบเฉพาะ Frame children ใน Scroll
if rec and typeof(rec.MouseButton1Click) == "RBXScriptSignal" then
    rec.MouseButton1Click:Connect(function()
        pcall(function()
            if Scroll then
                for _, child in ipairs(Scroll:GetChildren()) do
                    if child:IsA("Frame") then
                        pcall(function() child:Destroy() end)
                    end
                end
                pcall(updateCanvas)
            end
        end)
    end)
end

-- expose API (เก็บไว้บน Gui ถ้าเจอ)
if root then
    pcall(function()
        local g = root.Parent -- In your path root is InsetFrame; parent is Holder
        local holder = g and g:FindFirstChild("__SEND_SNIPPET_API__") or Instance.new("Folder")
        holder.Name = "__SEND_SNIPPET_API__"
        holder.Parent = g or root
        for _, v in ipairs(holder:GetChildren()) do if v:IsA("BindableFunction") or v:IsA("BindableEvent") then pcall(function() v:Destroy() end) end end
        local bf = Instance.new("BindableFunction"); bf.Name = "GetAPI"; bf.Parent = holder
        bf.OnInvoke = function() return {
            TrainFromScroll = TrainFromScroll,
            ReadLatestA2 = ReadLatestA2,
            Think = Think,
            SendPlr = send_plr,
            SendAi = send_ai,
            SendMesg = send_mesg,
            UpdateCanvas = updateCanvas,
        } end
    end)
end

