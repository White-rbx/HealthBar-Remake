    end
end

-- compute pipeline (simple)
local function tokenize(s)
    if not s then return {} end
    s = tostring(s):lower()
    local t = {}
    for w in s:gmatch("[%w%p]+") do
        w = w:gsub("[%p]+", ""):gsub("^%s+", ""):gsub("%s+$", "")
        if #w>0 then t[#t+1]=w end
    end
    return t
end
local function list_counts(l) local m={} for _,v in ipairs(l) do m[v]=(m[v] or 0)+1 end return m end
local function overlap(a,b)
    local ta, tb = tokenize(a), tokenize(b)
    if #ta==0 or #tb==0 then return 0 end
    local sa, sb = list_counts(ta), list_counts(tb)
    local match=0 for k,v in pairs(sa) do if sb[k] then match = match + math.min(v,sb[k]) end end
    local avg = (#ta + #tb)/2
    return match / math.max(1, avg)
end
local function compute_answer(input, context)
    -- try supervised predict if bindable exists
    local ok, res = pcall(function()
        local fn = wait_for_bindable and wait_for_bindable("ai.Learning_Supervised_Predict")
        if fn and fn:IsA("BindableFunction") then return fn:Invoke(input) end
        return nil
    end)
    if ok and res and tostring(res)~="" then return tostring(res) end
    -- try unsupervised topics
    local ok2, topics = pcall(function()
        local fn = wait_for_bindable and wait_for_bindable("ai.Unsupervised_GetTopics")
        if fn and fn:IsA("BindableFunction") then return fn:Invoke(5) end
        return nil
    end)
    if ok2 and topics and #topics>0 then return "Main topic: "..tostring(topics[1].w or topics[1]) end
    -- DataStorage fuzzy match
    local ok3, examples = pcall(function()
        local fn = wait_for_bindable and wait_for_bindable("ai.DataStorage_Get")
        if fn and fn:IsA("BindableFunction") then return fn:Invoke() end
        return nil
    end)
    if ok3 and type(examples)=="table" and #examples>0 then
        local bestScore, bestText = 0, nil
        for _,ex in ipairs(examples) do
            local txt = tostring((type(ex)=="table" and (ex.text or ex)) or ex)
            local sc = overlap(input, txt)
            if sc > bestScore then bestScore = sc; bestText = txt end
        end
        if bestScore > 0.05 and bestText then
            return "Found related example (score "..string.format("%.2f", bestScore).."): "..bestText:sub(1,800)
        end
    end
    return nil
end

-- job control + debounce to prevent multiple plr frames
local currentJob = nil
local jobCounter = 0
local sendLock = false

local function cancel_job()
    if currentJob and currentJob.cancel then pcall(currentJob.cancel) end
    currentJob = nil
end

function ThinkAsync(input, context)
    if not input then return end
    jobCounter = jobCounter + 1
    cancel_job()
    local token = { id = jobCounter, canceled = false }
    currentJob = { token = token, cancel = function() token.canceled = true end }

    -- handle commands
    local s = tostring(input)
    if s:sub(1,1) == "/" then
        local parts = {}
        for p in s:gmatch("%S+") do parts[#parts+1]=p end
        local cmd = parts[1]:lower()
        if cmd == "/fetch" then
            local raw = parts[2]
            if not raw then show_error_in_ui("Usage: /fetch <url>"); currentJob=nil; return end
            local url = detect_and_normalize_url(raw) or raw
            if not url then show_error_in_ui("Invalid url"); currentJob=nil; return end
            local jobH = staged_status_loop(token, {"Searching URL...","Getting Data...","Readying..."}, THINKING_BASE)
            local ok, body = fetch_url(url)
            if not ok then show_error_in_ui("ERROR fetching URL: "..tostring(body)); if jobH and jobH.cancel then pcall(jobH.cancel) end; currentJob=nil; return end
            local txt = body and tostring(body) and body or ""
            pcall(function() local fn = wait_for_bindable and wait_for_bindable("ai.DataStorage_Add"); if fn and fn:IsA("BindableFunction") then fn:Invoke({ text = txt, source = url, time = os.time() }) end end)
            local ans = compute_answer(table.concat(parts," ",3) or "", txt) or "No focused answer from fetched content."
            local f = jobH and jobH.frame or get_or_create_thinking_frame(ans)
            update_text_in_frame(f, ans)
            if jobH and jobH.cancel then pcall(jobH.cancel) end
            currentJob=nil; return
        else
            -- other commands: show simple mesg
            if not call_mesg then fallback_create_message("Command not supported: "..cmd, 40, 200,200,200, 0,0,0) else pcall(call_mesg, "Command not supported: "..cmd, 40) end
            currentJob=nil; return
        end
    end

    -- normal question: create thinking UI and compute
    local jobHandle = staged_status_loop(token, {"Analyzing...", "Searching memory...", "Preparing answer..."}, THINKING_BASE)
    task.spawn(function()
        local start = tick()
        local maxWait = 30
        local result = compute_answer(input, context)
        while not result and (tick()-start) < maxWait and not token.canceled do
            task.wait(0.12)
            result = compute_answer(input, context)
        end
        if token.canceled then if jobHandle and jobHandle.cancel then pcall(jobHandle.cancel) end; currentJob=nil; return end
        if not result then update_text_in_frame(jobHandle.frame, "ERROR -1: TIMEOUT (overthinking)") ; if jobHandle and jobHandle.cancel then pcall(jobHandle.cancel) end; currentJob=nil; return end
        if not call_ai(result, 60) then fallback_create_ai(result, 60) end
        if jobHandle and jobHandle.cancel then pcall(jobHandle.cancel) end
        currentJob=nil
    end)
end

