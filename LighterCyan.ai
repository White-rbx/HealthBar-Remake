-- ฝังในสคริปท์หลักของคุณ หรือเรียกด้วย context:
-- local API = SEND_TRAIN({ send = send, clear = clear, rec = rec, box = box, Scroll = Scroll })

local SEND_TRAIN = (function(ctx)
    ctx = ctx or {}
    local sendBtn = ctx.send
    local clearBtn = ctx.clear
    local recBtn = ctx.rec
    local box     = ctx.box
    local Scroll  = ctx.Scroll

    -- fallback finder (หาใน script.Parent / ScreenGui ถ้าไม่ได้ส่ง ctx)
    local function tryFind(parent, name, class)
        if not parent then return nil end
        local v = parent:FindFirstChild(name)
        if v then return v end
        for _, c in ipairs(parent:GetChildren()) do
            if class and c:IsA(class) then return c end
            if c.Name and c.Name:lower():find(name:lower()) then return c end
        end
        return nil
    end

    if not (sendBtn and clearBtn and recBtn and box and Scroll) then
        local p = script.Parent
        local guiRoot = p
        while guiRoot and not guiRoot:IsA("ScreenGui") and guiRoot.Parent do guiRoot = guiRoot.Parent end
        guiRoot = (guiRoot and guiRoot:IsA("ScreenGui")) and guiRoot or nil

        box     = box     or tryFind(p, "Ask", "TextBox") or (guiRoot and tryFind(guiRoot, "Ask", "TextBox"))
        sendBtn = sendBtn or tryFind(p, "Send", "TextButton") or (guiRoot and tryFind(guiRoot, "Send", "TextButton"))
        clearBtn= clearBtn or tryFind(p, "clear", "TextButton") or (guiRoot and tryFind(guiRoot, "clear", "TextButton"))
        recBtn  = recBtn  or tryFind(p, "re-chat", "TextButton") or tryFind(p, "rec", "TextButton") or (guiRoot and (tryFind(guiRoot, "re-chat") or tryFind(guiRoot, "rec")))
        Scroll  = Scroll  or tryFind(p, "Chat", "ScrollingFrame") or (guiRoot and tryFind(guiRoot, "Chat", "ScrollingFrame"))
    end

    -- ensure layout + updater
    local function ensureLayout(scroll)
        if not scroll then return nil end
        for _, c in ipairs(scroll:GetChildren()) do if c:IsA("UIListLayout") then return c end end
        local layout = Instance.new("UIListLayout"); layout.SortOrder = Enum.SortOrder.LayoutOrder; layout.Padding = UDim.new(0,6); layout.Parent = scroll
        return layout
    end
    local layout = ensureLayout(Scroll)
    local function updateCanvas()
        if not (Scroll and layout) then return end
        task.defer(function()
            local ok, size = pcall(function() return layout.AbsoluteContentSize end)
            if ok and size then
                local target = math.max(size.Y + 8, Scroll.AbsoluteSize.Y)
                pcall(function() Scroll.CanvasSize = UDim2.new(0,0,0,target) end)
                pcall(function() Scroll.CanvasPosition = Vector2.new(0, math.max(0, size.Y - Scroll.AbsoluteSize.Y)) end)
            end
        end)
    end
    if layout then layout:GetPropertyChangedSignal("AbsoluteContentSize"):Connect(updateCanvas) end

    -- message creators (ชื่อ TextLabel ตามที่คุณใช้: 'a1' / 'a2')
    local function createPlr(text, px)
        px = tonumber(px) or math.clamp(30 + math.ceil(#tostring(text)/40)*18, 28, 400)
        local f = Instance.new("Frame"); f.Name = "plr"; f.Size = UDim2.new(0.96,0,0,px); f.Parent = Scroll
        local lbl = Instance.new("TextLabel"); lbl.Name = "a1"; lbl.Text = tostring(text or ""); lbl.Size = UDim2.new(0.88,-8,1,0); lbl.Position = UDim2.new(0,56,0,0)
        lbl.BackgroundTransparency = 1; lbl.TextWrapped = true; lbl.TextXAlignment = Enum.TextXAlignment.Right; lbl.Parent = f
        -- optional icon placeholder (keeps compatibility with ReadLatestA2 searching for 'a2')
        local img = Instance.new("ImageLabel"); img.Name = "a2"; img.Size = UDim2.new(0,50,0,50); img.BackgroundTransparency = 1; img.Parent = f
        return f
    end

    local function createAi(text, px)
        px = tonumber(px) or math.clamp(30 + math.ceil(#tostring(text)/40)*18, 28, 400)
        local f = Instance.new("Frame"); f.Name = "ai"; f.Size = UDim2.new(0.96,0,0,px); f.Parent = Scroll
        local img = Instance.new("ImageLabel"); img.Name="a1"; img.Size=UDim2.new(0,50,0,50); img.BackgroundTransparency=1; img.Parent=f
        local lbl = Instance.new("TextLabel"); lbl.Name = "a2"; lbl.Text = tostring(text or ""); lbl.Size = UDim2.new(0.88,-8,1,0); lbl.Position = UDim2.new(0,56,0,0)
        lbl.BackgroundTransparency = 1; lbl.TextWrapped = true; lbl.TextXAlignment = Enum.TextXAlignment.Left; lbl.Parent = f
        return f
    end

    local function createMessage(text, px)
        px = tonumber(px) or 40
        local f = Instance.new("Frame"); f.Name = "message"; f.Size = UDim2.new(0.96,0,0,px); f.Parent = Scroll
        local lbl = Instance.new("TextLabel"); lbl.Name="a1"; lbl.Text=tostring(text or ""); lbl.Size=UDim2.new(0.88,-8,1,0); lbl.BackgroundTransparency=1; lbl.TextWrapped=true; lbl.TextXAlignment=Enum.TextXAlignment.Center; lbl.Parent=f
        return f
    end

    -- corpus & training helpers
    local Corpus = {}
    local function AddToCorpus(s) if s and type(s) == "string" then table.insert(Corpus, s) end end
    local function TrainFromScroll()
        if not Scroll then return end
        for _, d in ipairs(Scroll:GetDescendants()) do
            if d:IsA("TextLabel") and (d.Name == "a1" or d.Name == "a2") then
                AddToCorpus(d.Text)
            end
        end
    end

    local function ReadLatestA2()
        if not Scroll then return nil end
        local last = nil
        for _, child in ipairs(Scroll:GetChildren()) do
            for _, d in ipairs(child:GetDescendants()) do
                if d:IsA("TextLabel") and d.Name == "a2" then last = d.Text end
            end
        end
        return last
    end

    -- simple Think (same as before)
    local function Think(input, context)
        input = tostring(input or ""); context = tostring(context or "")
        local tokens = {}
        for w in input:gmatch("%w+") do tokens[#tokens+1] = w:lower() end
        for w in context:gmatch("%w+") do tokens[#tokens+1] = w:lower() end
        local bestScore, bestIdx = 0, nil
        for i, entry in ipairs(Corpus) do
            local score = 0
            local el = tostring(entry):lower()
            for _, t in ipairs(tokens) do if #t>=3 and el:find(t,1,true) then score = score + 1 end end
            if score > bestScore then bestScore, bestIdx = score, i end
        end
        if bestIdx then
            local reply = Corpus[bestIdx]
            if #reply > 200 then reply = string.sub(reply,1,200) .. "..." end
            return ("คิดว่า " .. reply)
        end
        if input ~= "" then return ("ฉันคิดเกี่ยวกับ: " .. string.sub(input,1,200)) end
        return ("สวัสดี — ลองพิมพ์อะไรมาได้เลย")
    end

    -- API senders that use plr()/ai()
    local function plr(text, lifespan)
        local ok, f = pcall(function() return createPlr(text, 60) end)
        pcall(updateCanvas)
        if lifespan and tonumber(lifespan) then
            task.delay(tonumber(lifespan), function() if ok and f and f.Parent then pcall(function() f:Destroy() end); pcall(updateCanvas) end end)
        end
        return f
    end

    local function ai(text, lifespan)
        local ok, f = pcall(function() return createAi(text, 60) end)
        pcall(updateCanvas)
        if lifespan and tonumber(lifespan) then
            task.delay(tonumber(lifespan), function() if ok and f and f.Parent then pcall(function() f:Destroy() end); pcall(updateCanvas) end end)
        end
        return f
    end

    local function mesg(text, lifespan)
        local ok, f = pcall(function() return createMessage(text, 40) end)
        pcall(updateCanvas)
        if lifespan and tonumber(lifespan) then
            task.delay(tonumber(lifespan), function() if ok and f and f.Parent then pcall(function() f:Destroy() end); pcall(updateCanvas) end end)
        end
        return f
    end

    -- BUTTON HANDLERS
    if sendBtn and typeof(sendBtn.MouseButton1Click) == "RBXScriptSignal" then
        sendBtn.MouseButton1Click:Connect(function()
            pcall(function()
                if box and box:IsA("TextBox") then
                    local txt = tostring(box.Text or "")
                    if txt:match("%S") then
                        -- ใช้ plr(...) ตามที่ต้องการ
                        plr(txt, 60)
                        -- ล้างกล่องข้อความ
                        pcall(function() box.Text = "" end)
                        -- train & think & reply
                        pcall(TrainFromScroll)
                        local latestA2 = ReadLatestA2() or ""
                        local reply = Think(txt, latestA2)
                        ai(reply, 60)
                    end
                end
            end)
        end)
    end

    -- Enter เพื่อส่ง
    if box and box:IsA("TextBox") then
        box.FocusLost:Connect(function(enter)
            if enter then
                pcall(function()
                    local txt = tostring(box.Text or "")
                    if txt:match("%S") then
                        plr(txt, 60)
                        pcall(function() box.Text = "" end)
                        pcall(TrainFromScroll)
                        local latestA2 = ReadLatestA2() or ""
                        local reply = Think(txt, latestA2)
                        ai(reply, 60)
                    end
                end)
            end
        end)
    end

    -- clear: ตั้งค่า box.Text = "" แบบปลอดภัย และ update canvas
    if clearBtn and typeof(clearBtn.MouseButton1Click) == "RBXScriptSignal" then
        clearBtn.MouseButton1Click:Connect(function()
            pcall(function() if box and box:IsA("TextBox") then box.Text = "" end end)
            pcall(updateCanvas)
        end)
    end

    -- rec: ลบเฉพาะ Frame children ใน Scroll แล้ว update canvas
    if recBtn and typeof(recBtn.MouseButton1Click) == "RBXScriptSignal" then
        recBtn.MouseButton1Click:Connect(function()
            pcall(function()
                if Scroll then
                    for _, child in ipairs(Scroll:GetChildren()) do
                        if child:IsA("Frame") then
                            pcall(function() child:Destroy() end)
                        end
                    end
                    pcall(updateCanvas)
                end
            end)
        end)
    end

    -- public API
    return {
        plr = plr,
        ai = ai,
        mesg = mesg,
        TrainFromScroll = TrainFromScroll,
        AddToCorpus = AddToCorpus,
        Think = Think,
        ReadLatestA2 = ReadLatestA2,
        GetCorpus = function() return Corpus end,
        updateCanvas = updateCanvas,
    }
end) -- end

