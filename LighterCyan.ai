    f.Parent = scroll
    local icon = Instance.new("ImageLabel")
    icon.Name = "a1"; icon.Size = UDim2.new(0,44,0,44); icon.Position = UDim2.new(0,6,0,-2); icon.BackgroundTransparency = 1; icon.Parent = f
    local lbl = Instance.new("TextLabel")
    lbl.Name = "a2"; lbl.Text = tostring(text or ""); lbl.TextWrapped = true
    lbl.TextXAlignment = Enum.TextXAlignment.Left; lbl.BackgroundTransparency = 1
    lbl.Size = UDim2.new(0.88,-8,1,-12); lbl.Position = UDim2.new(0,56,0,6); lbl.Parent = f
    pcall(function() lbl.AutomaticSize = Enum.AutomaticSize.Y end)
    task.wait(0.01)
    pcall(function() if lbl.AutomaticSize then f.Size = UDim2.new(0.96,0,0, lbl.AbsoluteSize.Y + 12) end end)
