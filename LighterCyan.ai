local function replace_thinking_frame_text(thinkingFrame, text)
    if thinkingFrame and thinkingFrame.Parent then
        pcall(function()
            for _,d in ipairs(thinkingFrame:GetDescendants()) do
                if d:IsA("TextLabel") and d.Name == "a2" then d.Text = tostring(text or "") end
            end
        end)
        update_canvas(find_scroll_frame())
        return true
    else
        if type(ai) == "function" then pcall(ai, text, 60) else create_ai_frame(find_scroll_frame(), text) end
    end
end

local function show_thinking_and_get_frame()
    local thinkingFrame = nil
    if type(ai) == "function" then
        pcall(function() ai(THINKING_TEXT, 60) end)
        local sc = find_scroll_frame()
        if sc then
            for i = #sc:GetChildren(), 1, -1 do
                local c = sc:GetChildren()[i]
                if c then
                    for _,d in ipairs(c:GetDescendants()) do
                        if d:IsA("TextLabel") and d.Name == "a2" and d.Text == THINKING_TEXT then thinkingFrame = c; break end
                    end
                    if thinkingFrame then break end
                end
            end
        end
    end
    if not thinkingFrame then thinkingFrame = create_ai_frame(find_scroll_frame(), THINKING_TEXT) end
    return thinkingFrame
end

-- ----------------------------
-- Local corpus (fallback)
-- ----------------------------
local LocalCorpus = { en = {}, th = {}, ext = {} }

local function detect_lang(s)
    if not s then return "en" end
    if tostring(s):find("[ก-๙]") then return "th" end
    return "en"
end

local function add_to_local_corpus(lang, text)
    if not text or tostring(text):match("^%s*$") then return end
    lang = lang or detect_lang(text)
    LocalCorpus[lang] = LocalCorpus[lang] or {}
    table.insert(LocalCorpus[lang], tostring(text))
end

local function rebuild_local_from_storage()
    local ok, res = data_get_all()
    if not ok or not res then dbg("rebuild_local_from_storage failed:", res); return false end
    local examples = res[1] or res
    LocalCorpus = { en = {}, th = {}, ext = {} }
    for _, ex in ipairs(examples) do
        local txt = tostring(ex.text or ex)
        local lang = detect_lang(txt)
        add_to_local_corpus(lang, txt)
    end
    dbg("LocalCorpus rebuilt: en=", #LocalCorpus.en, "th=", #LocalCorpus.th)
    return true
end

local function simple_local_match(input, context, lang)
    input = tostring(input or ""):lower()
    local tokens = {}
    for w in input:gmatch("%w+") do if #w >= 3 then tokens[#tokens+1] = w end end
    for _,txt in ipairs(LocalCorpus[lang] or {}) do
        local score = 0
        local lower = tostring(txt):lower()
        for _,t in ipairs(tokens) do if lower:find(t, 1, true) then score = score + 1 end end
        if score > 0 then return txt end
    end
    for _,txt in ipairs(LocalCorpus.ext or {}) do
        local score = 0
        local lower = tostring(txt):lower()
        for _,t in ipairs(tokens) do if lower:find(t, 1, true) then score = score + 1 end end
        if score > 0 then return txt end
    end
    return nil
end

-- ----------------------------
-- Answer pipeline
-- ----------------------------
local function compute_answer(input, context)
    local lang = detect_lang(input or context)
    local pred = predict_supervised(input)
    if pred and tostring(pred) ~= "" then return tostring(pred) end
    local topics = get_unsupervised_topics(5)
    if topics and #topics > 0 then
        local top = topics[1] and (topics[1].w or topics[1].w)
        if top then
            if lang == "th" then return "หัวข้อสำคัญ: " .. tostring(top) end
            return "Main topic: " .. tostring(top)
        end
    end
    local match = simple_local_match(input, context, lang)
    if match then
        if lang == "th" then return "พบบทความที่เกี่ยวข้อง: " .. match:sub(1,300) end
        return "Found related: " .. match:sub(1,300)
    end
    if lang == "th" then return "ขอข้อมูลเพิ่มหรือใช้ /fetch <url> เพื่อดึงข้อมูลภายนอก" end
    return "Add more context or use /fetch <url> to pull external data."
end

local function ThinkAsync(input, context)
    local thinkingFrame = safe_pcall(show_thinking_and_get_frame)
    task.spawn(function()
        task.wait(0.06)
        pcall(rebuild_local_from_storage)
        local ok, ans = pcall(function() return compute_answer(input, context) end)
        if not ok or not ans then
            ans = (detect_lang(input) == "th") and "เกิดข้อผิดพลาดในการประมวลผล" or "Error computing answer"
            dbg("compute_error:", ans)
        end
        pcall(function() replace_thinking_frame_text(thinkingFrame, ans) end)
    end)
end

-- ----------------------------
-- Code runner & fetcher
-- ----------------------------
local function run_code_string(code)
    if not code or code == "" then return false, "empty" end
    if type(loadstring) == "function" then
        local ok, fn = pcall(loadstring, code)
        if not ok then return false, fn end
        if type(fn) == "function" then
            local ok2, res = pcall(fn)
            return ok2, res
        end
        return false, "no function"
    elseif type(load) == "function" then
        local fn, e = load(code)
        if not fn then return false, e end
        local ok, res = pcall(fn)
        if ok then return true, res else return false, res end
    else
        return false, "no load available"
    end
end

local function handle_fetch(url)
    if not url or url == "" then replace_thinking_frame_text(nil, "Fetch error: empty url"); return end
    local thinkingFrame = show_thinking_and_get_frame()
    task.spawn(function()
        local ok, res = pcall(function() return game:HttpGet(url) end)
        if not ok or not res then ok, res = pcall(function() return HttpService:GetAsync(url, true) end) end
        if not ok or not res then replace_thinking_frame_text(thinkingFrame, "Fetch error: "..tostring(res or "failed")); return end
        pcall(function() data_add(res, {source="fetch", time=os.time()}) end)
        pcall(rebuild_local_from_storage)
        local ans = compute_answer("", tostring(res):sub(1,2000))
        replace_thinking_frame_text(thinkingFrame, ans)
    end)
end

local function handle_loadstring(cmdtext)
    local ok, res = run_code_string(cmdtext)
    if ok then replace_thinking_frame_text(nil, tostring(res or "Executed")) else replace_thinking_frame_text(nil, "Error: "..tostring(res)) end
end

local function handle_run(code)
    local ok, res = run_code_string(code)
    if ok then replace_thinking_frame_text(nil, tostring(res or "Executed")) else replace_thinking_frame_text(nil, "Run error: "..tostring(res)) end
end

-- ----------------------------
-- Command handler & text flow
-- ----------------------------
local function handle_command_or_text(inputText)
    if not inputText then return end
    inputText = tostring(inputText):match("^%s*(.-)%s*$")
    if inputText == "" then return end

    if inputText:sub(1,1) == "/" then
        local body = inputText:sub(2)
        if body:match("^help") then
            replace_thinking_frame_text(nil, "/fetch <url>  /loadstring <code>  /run <code>  /train start/stop or /train <mode>")
            return
        end
        local furl = body:match("^fetch%s+(.+)$")
        if furl or body:match("^https?://") then handle_fetch(furl or body); return end
        if body:match("^%s*loadstring") or body:match("^%s*%(") or body:match("^%s*eval") then handle_loadstring(body); return end
        local runcode = body:match("^run%s+(.+)$") or body:match("^explorer%s+(.+)$")
        if runcode then handle_run(runcode); return end
        local tr = body:match("^train%s*(.*)$")
        if tr then
            if tr == "" then replace_thinking_frame_text(nil, "Train usage: /train start/stop or /train <mode>"); return end
            if tr:match("^start") then
                local params = {}
                local params_str = tr:match("^start%s*(.*)") or ""
                for k,v in params_str:gmatch("(%w+)%s*=%s*([^,%s]+)") do if tonumber(v) then v = tonumber(v) end; params[k] = v end
                if not params.mode then params.mode = "supervised" end
                fire_training("start", params)
                replace_thinking_frame_text(nil, "Training started: "..tostring(params.mode))
                return
            elseif tr:match("^stop") then fire_training("stop"); replace_thinking_frame_text(nil, "Training stop requested"); return
            else fire_learning(tr); replace_thinking_frame_text(nil, "Learning command: "..tostring(tr)); return end
        end
        replace_thinking_frame_text(nil, "Unknown command. Use /help")
        return
    end

    -- normal text: store -> quick train -> think
    local ok, res = data_add(inputText, {source="gui", time=os.time()})
    if not ok then dbg("data_add failed:", res) end
    pcall(function() fire_learning("train_supervised") end)
    local sc = find_scroll_frame()
    local latest = read_latest_a2(sc) or ""
    ThinkAsync(inputText, latest)
end

