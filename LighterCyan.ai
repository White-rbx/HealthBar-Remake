            end)
        end
    end)
end

-- Corpus per language
local Corpus = { en = {}, th = {}, ext = {} } -- ext for external content
local function detectLang(str)
    if not str or str == "" then return "en" end
    -- simple Thai detection: any char in Thai unicode range
    if tostring(str):find("[%z\1-\127\194-\244]") then
        -- naive: check for Thai characters (ก-ฮ)
        if tostring(str):find("[ก-ฮ]") then return "th" end
    end
    return "en"
end

local function AddToCorpus(lang, txt)
    if not txt or txt == "" then return end
    lang = lang or detectLang(txt)
    Corpus[lang] = Corpus[lang] or {}
    table.insert(Corpus[lang], tostring(txt))
end

local function TrainFromScroll(lang)
    if not Scroll then return end
    lang = lang or "entotal"
    for _, d in ipairs(Scroll:GetDescendants()) do
        if d:IsA("TextLabel") and (d.Name == "a1" or d.Name == "a2") then
            if lang == "entotal" then
                AddToCorpus(detectLang(d.Text), d.Text)
            else
                AddToCorpus(lang, d.Text)
            end
        end
    end
end

-- External content helpers
local HttpService = game:GetService("HttpService")
local function FetchURL(url)
    if not url or url == "" then return false, "empty url" end
    -- Try server-like HttpService GetAsync (may fail in client env)
    local ok, res = pcall(function()
        return HttpService:GetAsync(url, true)
    end)
    if ok then
        -- store in ext
        AddToCorpus("ext", res)
        return true, res
    end
    return false, "Fetch failed or disabled (HttpService:GetAsync not allowed in this environment)"
end

local function SetExternalContent(text)
    AddToCorpus("ext", tostring(text or ""))
end

-- Simple retrieval Think (language-aware)
local function simpleThink(input, context, lang)
    input = tostring(input or "")
    context = tostring(context or "")
    lang = lang or detectLang(input) or "en"
    local tokens = {}
    for w in input:gmatch("%w+") do tokens[#tokens+1] = w:lower() end
    for w in context:gmatch("%w+") do tokens[#tokens+1] = w:lower() end

    local bestScore, bestIdx, bestLang = 0, nil, nil
    for L, list in pairs(Corpus) do
        for i, entry in ipairs(list) do
            local score = 0
            local el = tostring(entry):lower()
            for _, t in ipairs(tokens) do
                if #t >= 3 and el:find(t, 1, true) then score = score + 1 end
            end
            if score > bestScore then bestScore, bestIdx, bestLang = score, i, L end
        end
    end

    if bestIdx and bestLang then
        local reply = Corpus[bestLang][bestIdx]
        if #reply > 350 then reply = string.sub(reply,1,350) .. "..." end
        -- language-dependent prefix
        if bestLang == "th" then return "คิดว่า " .. reply end
        return "I think " .. reply
    end

    -- fallback: short templated bilingual reply
    if lang == "th" then
        return "ฉันคิดเกี่ยวกับ: " .. (input ~= "" and (input:sub(1,200)) or "ลองพิมพ์อะไรมา")
    else
        return "I'm thinking about: " .. (input ~= "" and (input:sub(1,200)) or "try typing something")
    end
end

-- Thinking flow: show "Thinking..." then replace or send answer
local function ThinkAsync(input, context, lang)
    -- create a local thinking frame we can replace later
    local thinkingFrame = createAiFrame("Thinking...")
    safeUpdateCanvas()

    -- compute (off-main)
    task.spawn(function()
        -- small artificial delay so UI shows "Thinking..."
        task.wait(0.12)
        local ok, answer = pcall(function()
            return simpleThink(input, context, lang)
        end)
        if not ok then answer = (lang == "th" and "เกิดข้อผิดพลาดในการคิด" or "Error thinking") end

        -- replace content in the thinking frame if possible
        pcall(function()
            if thinkingFrame and thinkingFrame.Parent then
                for _, d in ipairs(thinkingFrame:GetDescendants()) do
                    if d:IsA("TextLabel") and d.Name == "a2" then
                        d.Text = tostring(answer)
                    end
                end
            else
                -- fallback: call global ai if exists
                if type(ai) == "function" then pcall(ai, answer, 60) end
            end
        end)

        safeUpdateCanvas()
    end)

    return thinkingFrame
end

-- Explorer: run code string on client (pcall + loadstring/load)
local function RunExplorer(code)
    if not code or code == "" then return false, "empty code" end
    local fn, err
    if type(loadstring) == "function" then
        fn, err = pcall(function() return loadstring(code) end)
        if not fn then return false, "loadstring failed: " .. tostring(err) end
        local ok, res = pcall(function() return (loadstring(code))() end)
        if ok then return true, res else return false, tostring(res) end
    elseif type(load) == "function" then
        local f, loadErr = load(code)
        if not f then return false, "load failed: "..tostring(loadErr) end
        local ok, res = pcall(f)
        if ok then return true, res else return false, tostring(res) end
    else
        return false, "no loadstring/load available in environment"
    end
end

-- Create + run LocalScript (client-side). parentPath optional (like "PlayerGui" or a full path under CoreGui)
local function RunLocalScript(source, parentPath)
    local player = game:GetService("Players").LocalPlayer
    local parent = nil
    if parentPath and type(parentPath) == "string" then
        -- try to resolve under CoreGui or PlayerGui
        local ok, p = pcall(function()
            if parentPath:sub(1,7) == "CoreGui." then
                return game:GetService("CoreGui")
            elseif parentPath:sub(1,9) == "PlayerGui." then
                return player and player:FindFirstChild("PlayerGui")
            else
                return player and player:FindFirstChild("PlayerGui")
            end
        end)
        parent = ok and p or nil
    else
        parent = player and player:FindFirstChild("PlayerGui")
    end
    if not parent then parent = root.Parent or game:GetService("Players").LocalPlayer.PlayerGui end

    local newLS = Instance.new("LocalScript")
    local ok, setOk = pcall(function()
        newLS.Name = "LS_Run_"..tostring(math.random(1000,9999))
        newLS.Source = tostring(source or "")
        newLS.Parent = parent
    end)
    if not ok then
        return false, "create LocalScript failed: " .. tostring(setOk)
    end
    return true, newLS
end

