-- ---------- Corpus & language ----------
local Corpus = { en = {}, th = {}, ext = {} }

local function detectLang(s)
    if not s then return "en" end
    if tostring(s):find("[ก-๙]") then return "th" end
    return "en"
end

local function AddToCorpus(lang, txt)
    if not txt or txt == "" then return end
    lang = lang or detectLang(txt)
    Corpus[lang] = Corpus[lang] or {}
    table.insert(Corpus[lang], tostring(txt))
end

local function TrainFromScroll(lang)
    if not Scroll then return end
    lang = lang or "auto"
    for _, d in ipairs(Scroll:GetDescendants()) do
        if d:IsA("TextLabel") and (d.Name == "a1" or d.Name == "a2") then
            if lang == "auto" then AddToCorpus(detectLang(d.Text), d.Text) else AddToCorpus(lang, d.Text) end
        end
    end
end

-- ---------- Fetch URL (research) ----------
local function FetchURL(url)
    if not url or url == "" then return false, "empty url" end
    -- try game:HttpGet first (commonly available in executors)
    local ok, res = pcall(function() return game:HttpGet(url) end)
    if ok and res then
        AddToCorpus("ext", res)
        return true, res
    end
    -- fallback HttpService:GetAsync
    ok, res = pcall(function() return game:GetService("HttpService"):GetAsync(url, true) end)
    if ok and res then
        AddToCorpus("ext", res)
        return true, res
    end
    return false, "Fetch failed or disabled in this environment"
end

local function SetExternalContent(text)
    AddToCorpus("ext", tostring(text or ""))
    return true
end

-- ---------- simple multi-language retrieval ----------
local function simpleThink(input, context, lang)
    input = tostring(input or "")
    context = tostring(context or "")
    lang = lang or detectLang(input)
    local tokens = {}
    for w in input:gmatch("%w+") do table.insert(tokens, w:lower()) end
    for w in context:gmatch("%w+") do table.insert(tokens, w:lower()) end

    local bestScore, bestText = 0, nil
    for L, list in pairs(Corpus) do
        for _, entry in ipairs(list) do
            local score = 0
            local el = tostring(entry):lower()
            for _, t in ipairs(tokens) do
                if #t >= 3 and el:find(t, 1, true) then score = score + 1 end
            end
            if score > bestScore then bestScore, bestText = score, entry end
        end
    end

    if bestText then
        if lang == "th" then return "คิดว่า " .. (bestText:sub(1,350)) end
        return "I think " .. (bestText:sub(1,350))
    end

    if lang == "th" then
        if input ~= "" then return "ฉันคิดเกี่ยวกับ: " .. input:sub(1,300) end
        return "ฉันว่างเปล่า ลองพิมพ์อะไรมา"
    else
        if input ~= "" then return "I'm thinking about: " .. input:sub(1,300) end
        return "I'm idle — try typing something"
    end
end

-- ---------- ThinkAsync (Thinking... then replace) ----------
local function ThinkAsync(input, context, lang)
    lang = lang or detectLang(input)
    local thinkingFrame = nil

    -- prefer calling ai("Thinking...",60) if global ai exists
    if type(ai) == "function" then
        pcall(ai, "Thinking...", 60)
        -- try to find the new thinking frame (latest a2 with "Thinking...")
        if Scroll then
            for i = #Scroll:GetChildren(), 1, -1 do
                local ch = Scroll:GetChildren()[i]
                if ch then
                    for _, d in ipairs(ch:GetDescendants()) do
                        if d:IsA("TextLabel") and d.Name == "a2" and d.Text == "Thinking..." then
                            thinkingFrame = ch
                            break
                        end
                    end
                    if thinkingFrame then break end
                end
            end
        end
    else
        thinkingFrame = createAiFrameFast("Thinking...")
    end
    safeUpdateCanvas()

    task.spawn(function()
        task.wait(0.12)
        local ok, ans = pcall(function() return simpleThink(input, context, lang) end)
        if not ok then ans = (lang == "th" and "เกิดข้อผิดพลาดในการคิด" or "Error thinking") end

        if thinkingFrame and thinkingFrame.Parent then
            pcall(function()
                for _, d in ipairs(thinkingFrame:GetDescendants()) do
                    if d:IsA("TextLabel") and d.Name == "a2" then d.Text = tostring(ans) end
                end
            end)
        else
            -- fallback: call ai(answer) or create frame
            if type(ai) == "function" then pcall(ai, ans, 60) else createAiFrameFast(ans) end
        end
        safeUpdateCanvas()
    end)
end

-- ---------- Explorer runner (eval) ----------
local function RunExplorer(code)
    if not code or code == "" then return false, "empty code" end
    if type(loadstring) == "function" then
        local ok, fn = pcall(function() return loadstring(code) end)
        if not ok then return false, fn end
        local ok2, res = pcall(fn)
        if ok2 then return true, res else return false, res end
    elseif type(load) == "function" then
        local f, e = load(code)
        if not f then return false, e end
        local ok, res = pcall(f)
        if ok then return true, res else return false, res end
    else
        return false, "no load/loadstring"
    end
end

-- ---------- LocalScript creation ----------
local function RunLocalScript(source, parentPath)
    local player = game:GetService("Players").LocalPlayer
    local parent = (player and player:FindFirstChild("PlayerGui")) or nil
    if parentPath and type(parentPath) == "string" then
        if parentPath:match("^PlayerGui") and player then parent = player:FindFirstChild("PlayerGui") or parent end
        -- do NOT write into the LighterCyan.ai CoreGui GUI per your rule
    end
    if not parent then return false, "no parent for LocalScript" end
    local ls = Instance.new("LocalScript")
    ls.Name = "RunLS_" .. tostring(math.random(1000,9999))
    ls.Source = tostring(source or "")
    local ok, res = pcall(function() ls.Parent = parent end)
    if not ok then return false, res end
    return true, ls
end

-- ---------- Read latest a2 helper ----------
local function ReadLatestA2()
    if not Scroll then return nil end
    local last = nil
    for i = #Scroll:GetChildren(), 1, -1 do
        local ch = Scroll:GetChildren()[i]
        for _, d in ipairs(ch:GetDescendants()) do
            if d:IsA("TextLabel") and d.Name == "a2" then last = d.Text; break end
        end
        if last then break end
    end
    return last
end

-- ---------- Command & text handler (separates fetch vs loadstring) ----------
local function handleCommandOrText(inputText)
    if not inputText or inputText == "" then return end
    inputText = tostring(inputText):match("^%s*(.-)%s*$") -- trim

    -- 1) /loadstring(...) -> run as code
    if inputText:match("^/loadstring%s*%(") then
        local inside = inputText:match("^/loadstring%s*%((.+)%)%s*$")
        if not inside then inside = inputText:sub(#"/loadstring(" + 1) inside = inside:gsub("%)$","") end
        local ok, res = pcall(function()
            local f
            if type(loadstring) == "function" then f = loadstring(inside) else f = load(inside) end
            if type(f) == "function" then return f() end
            return true, "no runnable chunk"
        end)
        if ok then
            local out = (res ~= nil) and tostring(res) or "Executed loadstring (no return)"
            if type(ai) == "function" then pcall(ai, out, 60) else createAiFrameFast(out) end
        else
            if type(ai) == "function" then pcall(ai, "Error executing loadstring: " .. tostring(res), 60) else createAiFrameFast("Error: " .. tostring(res)) end
        end
        safeUpdateCanvas()
        return
    end

    -- 2) /fetch <url>  OR bare http(s) url -> fetch content, add to ext corpus, ThinkAsync with fetched content as context
    local fetchUrl = inputText:match("^/fetch%s+(.+)$") or inputText:match("^(https?://.+)$")
    if fetchUrl then
        if type(ai) == "function" then pcall(ai, "Thinking...", 60) else createAiFrameFast("Thinking...") end
        safeUpdateCanvas()
        task.spawn(function()
            local ok, res = FetchURL(fetchUrl)
            if not ok then
                if type(ai) == "function" then pcall(ai, "Fetch error: " .. tostring(res), 60) else createAiFrameFast("Fetch error: " .. tostring(res)) end
                safeUpdateCanvas()
                return
            end
            -- use fetched res as context (trimmed)
            ThinkAsync(inputText, tostring(res):sub(1,2000), detectLang(res))
        end)
        return
    end

    -- 3) /run or /explorer <code> -> eval short code
    local runCode = inputText:match("^/run%s+(.+)$") or inputText:match("^/explorer%s+(.+)$")
    if runCode then
        local ok, res = RunExplorer(runCode)
        if ok then if type(ai) == "function" then pcall(ai, tostring(res or "Executed"), 60) else createAiFrameFast(tostring(res or "Executed")) end
        else if type(ai) == "function" then pcall(ai, "Run error: "..tostring(res), 60) else createAiFrameFast("Run error: "..tostring(res)) end end
        safeUpdateCanvas()
        return
    end

    -- normal text branch: plr/text -> TrainFromScroll -> ThinkAsync
    if type(plr) == "function" then
        pcall(plr, inputText, 60)
    else
        createPlrFrameFast(inputText)
    end

    -- clear AskBox externally by caller (we still clear in sender)
    TrainFromScroll()
    local latestContext = ReadLatestA2() or ""
    ThinkAsync(inputText, latestContext, detectLang(inputText))
end

-- ---------- wiring Send / Clear / Rec / Enter (FocusLost) with rehook ----------
local function safeConnect(button, fn)
    if not button then return end
    pcall(function()
        if typeof(button.MouseButton1Click) == "RBXScriptSignal" then
            button.MouseButton1Click:Connect(fn)
        end
    end)
end

local function hookHandlers()
    if SendBtn then
        safeConnect(SendBtn, function()
            pcall(function()
                local txt = (AskBox and AskBox.Text) or ""
                if txt == "" then return end
                handleCommandOrText(txt)
                pcall(function() if AskBox then AskBox.Text = "" end end)
                safeUpdateCanvas()
            end)
        end)
    end

    if ClearBtn then
        safeConnect(ClearBtn, function()
            pcall(function() if AskBox and AskBox:IsA("TextBox") then AskBox.Text = "" end end)
            safeUpdateCanvas()
        end)
    end

    if RecBtn then
        safeConnect(RecBtn, function()
            pcall(function()
                if Scroll then
                    for _, c in ipairs(Scroll:GetChildren()) do
                        if c:IsA("Frame") then pcall(function() c:Destroy() end) end
                    end
                    safeUpdateCanvas()
                end
            end)
        end)
    end

    if AskBox and AskBox:IsA("TextBox") then
        pcall(function()
            AskBox.FocusLost:Connect(function(enter)
                if enter then
                    local txt = AskBox.Text or ""
                    if txt == "" then return end
                    handleCommandOrText(txt)
                    pcall(function() AskBox.Text = "" end)
                    safeUpdateCanvas()
                end
            end)
        end)
    end
end

hookHandlers()

-- re-hook watcher: if GUI reloads or elements are replaced, re-resolve and re-hook
task.spawn(function()
    while task.wait(2) do
        -- attempt to get fresh references if parent disappeared
        if (not inputFrame or not inputFrame.Parent) or (not Scroll or not Scroll.Parent) then
            local newBase = getBase()
            if newBase then
                inputFrame = newBase:FindFirstChild("a3_Input&Send") or inputFrame
                chatFrame  = newBase:FindFirstChild("a2_Chat") or chatFrame
                AskBox     = inputFrame and inputFrame:FindFirstChild("Ask") or AskBox
                SendBtn    = inputFrame and inputFrame:FindFirstChild("Send") or SendBtn
                ClearBtn   = inputFrame and inputFrame:FindFirstChild("clear") or ClearBtn
                RecBtn     = inputFrame and (inputFrame:FindFirstChild("re-chat") or inputFrame:FindFirstChild("rec")) or RecBtn
                Scroll     = chatFrame and chatFrame:FindFirstChild("Chat") or Scroll
                if Scroll then safeUpdateCanvas() end
                -- re-hook
                hookHandlers()
            end
        end
    end
end)

