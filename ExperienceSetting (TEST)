-- ---------- append helpers ----------
local chatCount = 0
local function appendChat(isUser, text, colorTbl, noTranslate)
    chatCount = chatCount + 1
    local fr = Instance.new("Frame"); fr.Name = "ChatItem_"..chatCount; fr.BackgroundTransparency = 1
    fr.Size = UDim2.new(1,0,0,0); fr.AutomaticSize = Enum.AutomaticSize.Y; fr.LayoutOrder = chatCount; fr.Parent = gptChat
    local lbl = Instance.new("TextLabel"); lbl.Name = "ChatLabel"
    lbl.Size = UDim2.new(1, -16, 0, 0); lbl.Position = UDim2.new(0, 8, 0, 6)
    lbl.BackgroundTransparency = 1; lbl.TextWrapped = true; lbl.AutomaticSize = Enum.AutomaticSize.Y
    lbl.Font = Enum.Font.SourceSans; lbl.TextSize = 18; lbl.Text = tostring(text or "")
    lbl.TextXAlignment = Enum.TextXAlignment.Left
    if colorTbl and type(colorTbl) == "table" then
        pcall(function() lbl.TextColor3 = Color3.fromRGB(colorTbl[1], colorTbl[2], colorTbl[3]) end)
    else
        if isUser then lbl.TextColor3 = Color3.fromRGB(86,170,255) else lbl.TextColor3 = Color3.fromRGB(255,255,255) end
    end
    lbl.Parent = fr
    -- translation (global) if enabled and message isn't system and user provided API
    if not noTranslate and STATE.translateGlobal and STATE.OPENAI_KEY and STATE.OPENAI_KEY ~= "" then
        -- run translation in background so UI shows immediately (optional: show pending)
        task.spawn(function()
            local target = tostring(STATE.translateGlobal):upper()
            -- form prompt
            local prompt = ("Translate the following text to %s without extra commentary:\n\n%s"):format((target=="TH" and "Thai" or "English"), tostring(text))
            local reply, err = callOpenAI_debug(prompt, STATE.OPENAI_KEY, STATE.PROJECT_ID)
            if reply and lbl and lbl.Parent then
                pcall(function() lbl.Text = tostring(reply) end)
                -- scroll bottom
                pcall(function() gptScroll.CanvasPosition = Vector2.new(0, uiLayout.AbsoluteContentSize.Y) end)
            end
        end)
    end
    task.defer(function()
        pcall(function()
            gptScroll.CanvasSize = UDim2.new(0,0,0,uiLayout.AbsoluteContentSize.Y)
            gptScroll.CanvasPosition = Vector2.new(0, uiLayout.AbsoluteContentSize.Y)
        end)
    end)
    return fr, lbl
end
local function appendSystem(msg) appendChat(false, "[System] "..tostring(msg), {200,200,255}, true) end
local function appendError(msg) appendChat(false, "[Error] "..tostring(msg), {255,80,80}, true) end
local function appendDebug(msg) appendChat(false, "[Debug] "..tostring(msg), {180,180,180}, true) end

-- ---------- OpenAI call ----------
-- Uses STATE.HttpAsync to decide behavior (still uses RequestAsync)
local function callOpenAI_debug(prompt, key, proj)
    if not httpEnabled() then return nil, "http_disabled" end
    if not key or key == "" then return nil, "no_key" end
    local attempts = 2; local backoffs = {1,2}
    for attempt = 1, attempts do
        local payload = { model = STATE.MODEL, messages = { { role = "user", content = prompt } }, max_tokens = 400, temperature = 0.6 }
        local headers = { ["Content-Type"] = "application/json", ["Authorization"] = "Bearer "..tostring(key) }
        if proj and proj ~= "" then headers["OpenAI-Project"] = tostring(proj) end
        local ok, respOrErr = pcall(function()
            return HttpService:RequestAsync({
                Url = "https://api.openai.com/v1/chat/completions",
                Method = "POST",
                Headers = headers,
                Body = HttpService:JSONEncode(payload),
                Timeout = 20,
            })
        end)
        if not ok then
            appendDebug("RequestAsync pcall failed: "..tostring(respOrErr))
            if attempt < attempts then task.wait(backoffs[attempt]) end
        else
            local resp = respOrErr
            if not resp.Success then
                local parsed = nil
                pcall(function() parsed = HttpService:JSONDecode(resp.Body or "{}") end)
                local errMsg = parsed and parsed.error and parsed.error.message or tostring(resp.StatusCode)
                if tostring(resp.StatusCode) == "401" or (errMsg and tostring(errMsg):lower():find("invalid")) then
                    return nil, ("unauthorized: %s"):format(tostring(errMsg))
                end
                if attempt < attempts then task.wait(backoffs[attempt]) end
                if attempt == attempts then return nil, ("http_error_%s"):format(tostring(resp.StatusCode)) end
            else
                local ok2, decoded = pcall(function() return HttpService:JSONDecode(resp.Body or "{}") end)
                if not ok2 or not decoded then return nil, "json_decode_failed" end
                local content = decoded and decoded.choices and decoded.choices[1] and decoded.choices[1].message and decoded.choices[1].message.content
                if content then return tostring(content), nil end
                return nil, "no_content"
            end
        end
    end
    return nil, "http_failed_all_attempts"
end

-- ---------- SeeChat (player chat hook) ----------
local seeChatConns = {}
local seeingChat = false
local function enableSeeChat()
    if seeingChat then appendSystem("SeeChat already enabled."); return end
    seeingChat = true
    for _,pl in ipairs(Players:GetPlayers()) do
        if pl and pl:IsA("Player") and not seeChatConns[pl] then
            seeChatConns[pl] = pl.Chatted:Connect(function(msg)
                appendChat(false, string.format("[%s]: %s", pl.Name, tostring(msg)))
            end)
        end
    end
    seeChatConns._added = Players.PlayerAdded:Connect(function(pl)
        seeChatConns[pl] = pl.Chatted:Connect(function(msg)
            appendChat(false, string.format("[%s]: %s", pl.Name, tostring(msg)))
        end)
    end)
    appendSystem("SeeChat enabled.")
end
local function disableSeeChat()
    for k,v in pairs(seeChatConns) do
        if type(k) == "userdata" and v and v.Disconnect then pcall(function() v:Disconnect() end) end
    end
    if seeChatConns._added then pcall(function() seeChatConns._added:Disconnect() end) end
    seeChatConns = {}
    seeingChat = false
    appendSystem("SeeChat disabled.")
end

-- ---------- View/Spy ----------
local viewState = { active = false, conn = nil, prevType = nil, prevSubject = nil }
local function startViewTarget(target)
    if not target then appendError("No target to view."); return false end
    local hrp = nil
    if target:IsA("Player") then
        if not target.Character then appendError("Player has no character."); return false end
        hrp = target.Character:FindFirstChild("HumanoidRootPart") or target.Character.PrimaryPart
    elseif target:IsA("Instance") then
        hrp = target:FindFirstChild("HumanoidRootPart") or (target:IsA("BasePart") and target) or target.PrimaryPart
    end
    if not hrp then appendError("Target has no HRP or position."); return false end
    if viewState.active then appendError("Already viewing; stop first."); return false end
    local cam = workspace.CurrentCamera
    viewState.prevType = cam.CameraType
    viewState.prevSubject = cam.CameraSubject
    viewState.active = true
    viewState.conn = RunService.RenderStepped:Connect(function()
        if not viewState.active then return end
        if hrp and hrp.Parent then
            cam.CameraType = Enum.CameraType.Scriptable
            cam.CFrame = hrp.CFrame * CFrame.new(0,2,6) * CFrame.Angles(-0.2, math.rad(180), 0)
        else
            if viewState.conn then viewState.conn:Disconnect(); viewState.conn = nil end
            viewState.active = false
        end
    end)
    appendSystem("Now viewing target. Use /UnView or /UnSpy to stop.")
    return true
end
local function stopViewTarget()
    if not viewState.active then appendSystem("Not currently viewing anyone."); return end
    if viewState.conn then pcall(function() viewState.conn:Disconnect() end); viewState.conn = nil end
    local cam = workspace.CurrentCamera
    pcall(function()
        cam.CameraType = viewState.prevType or Enum.CameraType.Custom
        cam.CameraSubject = viewState.prevSubject or (LocalPlayer.Character and LocalPlayer.Character:FindFirstChildOfClass("Humanoid"))
    end)
    viewState.active = false
    appendSystem("Camera restored.")
end

-- ---------- saved keeps ----------
local savedKeeps = {}

-- ---------- auto death counts ----------
local function getDeathsForPlayer(pl)
    if not pl then return nil end
    local ls = pl:FindFirstChild("leaderstats")
    if not ls then return nil end
    local d = ls:FindFirstChild("Deaths") or ls:FindFirstChild("deaths")
    if not d then return nil end
    return d.Value
end
local function autoAllDeathsReport()
    if not STATE.autoAllDeathCounts then return end
    for _,pl in ipairs(Players:GetPlayers()) do
        local d = getDeathsForPlayer(pl)
        if d then appendSystem(("%s Deaths: %s"):format(pl.Name, tostring(d))) end
    end
end

-- ---------- command parsing helpers ----------
local function try_parse_parentheses_content(txt)
    local inside = txt:match("%((.*)%)")
    if inside then
        inside = inside:gsub('^%s*"', ""):gsub('"%s*$', "")
        inside = inside:gsub("^%s*'", ""):gsub("'%s*$", "")
        return trim(inside)
    end
    return nil
end
local function split_args_parentheses(s)
    local inside = s:match("%((.*)%)")
    if not inside then return {} end
    local parts = {}
    local cur = ""
    local depth = 0
    for i = 1, #inside do
        local ch = inside:sub(i,i)
        if ch == "," and depth == 0 then
            table.insert(parts, trim(cur)); cur = ""
        else
            cur = cur .. ch
            if ch == "(" then depth = depth + 1 end
            if ch == ")" then depth = math.max(0, depth - 1) end
        end
    end
    if trim(cur) ~= "" then table.insert(parts, trim(cur)) end
    for i,p in ipairs(parts) do
        p = p:gsub('^%s*"', ""):gsub('"%s*$', "")
        p = p:gsub("^%s*'", ""):gsub("'%s*$", "")
        parts[i] = trim(p)
    end
    return parts
end

-- ---------- main command handler ----------
local function handleCommand(rawText)
    local t = tostring(rawText or "")
    if t:sub(1,1) ~= "/" then return false end
    local cmd, rest = t:match("^/(%S+)%s*(.*)$")
    cmd = (cmd or ""):upper()
    rest = rest or ""

    -- shortcuts & aliases mapping
    local alias = {
        INS = "INS", INSTANCE = "INS", IN = "INS",
        RESIZE = "RESIZE", RES = "RESIZE", RESZ = "RESIZE",
        REPOS = "POSITION", REPOSITION = "POSITION",
        POS = "POSITION", TP = "TELEPORT", RJ = "REJOIN",
        RJN = "REJOIN", SH = "SERVERHOP", AADC = "AADC",
        RECOLOR = "RECOLOR", REPOS = "POSITION", VIEW = "VIEW",
        SPY = "VIEW", UNVIEW = "STOPVIEW", UNSPY = "STOPVIEW",
        SEECHAT = "SEECHAT", ENACHAT = "SEECHAT", UNEACHAT = "UNSEECHAT",
        UNSEECHAT = "UNSEECHAT", EXIT = "LEAVEGAME", LEAVE = "LEAVEGAME",
        RE = "RESET", RESET = "RESET", DEATHS = "DEATHS", DEATHCOUNTS="DEATHS"
    }
    if alias[cmd] then cmd = alias[cmd] end

    -- /API
    if cmd == "API" then
        local inside = try_parse_parentheses_content(rest) or trim(rest)
        if inside == "" then appendSystem('Usage: /API ("sk-...")'); return true end
        STATE.OPENAI_KEY = trim(inside); STATE.validated = false
        appendSystem(("API set: %s (not validated)"):format(redactKey(STATE.OPENAI_KEY))); return true
    end
    -- /APIJ
    if cmd == "APIJ" then
        local inside = try_parse_parentheses_content(rest) or trim(rest)
        if inside == "" then appendSystem('Usage: /APIJ ("proj_xxx")'); return true end
        STATE.PROJECT_ID = trim(inside); appendSystem("Project ID set: "..tostring(STATE.PROJECT_ID)); return true
    end
    if cmd == "NOAPIJ" or cmd == "UNSAVEAPIJ" then STATE.PROJECT_ID = nil; appendSystem("Project ID removed."); return true end

    -- /INS ("object","Name","Parent","(R,G,B)","SizeVector(0,0,0)")
    if cmd == "INS" then
        local args = split_args_parentheses(rest)
        if #args < 3 then appendSystem('Usage: /Ins "Class","Name","Parent", "(R,G,B)","Vector3.new(x,y,z)"'); return true end
        local className, setName, parentLocate = args[1], args[2], args[3]
        local colorArg, sizeArg = args[4], args[5]
        local parent, err = resolveLocate(parentLocate)
        if not parent then appendError(("Parent resolve failed: %s"):format(tostring(err))); return true end
        local ok, inst = pcall(function() return Instance.new(className) end)
        if not ok or not inst then appendError(("Failed create class %s"):format(className)); return true end
        pcall(function() inst.Name = setName end)
        pcall(function() inst.Parent = parent end)
        if colorArg then
            local col = parseRGBString(colorArg) or safeEval(colorArg)
            if type(col) == "userdata" then pcall(function() inst.Color = col end) end
        end
        if sizeArg then
            local vec, e = safeEval(sizeArg)
            if vec and typeof(vec) == "Vector3" then pcall(function() if inst:IsA("BasePart") then inst.Size = vec end end) end
        end
        appendSystem(("Created %s named %s under %s"):format(className, setName, tostring(parent)))
        return true
    end

    -- /INSMESH ("object","[Mesh]","Parent","MeshSize(1,1,1)")
    if cmd == "INSMESH" then
        local args = split_args_parentheses(rest)
        if #args < 3 then appendSystem('Usage: /InsMesh "Name","MeshType","Parent","MeshSize(Vector3)")'); return true end
        local objName, meshTypeStr, parentLocate, meshSizeArg = args[1], args[2], args[3], args[4]
        local parent, err = resolveLocate(parentLocate)
        if not parent then appendError(("Parent resolve failed: %s"):format(tostring(err))); return true end
        local target = parent:FindFirstChild(objName, true) or findObjectByName(objName)
        if not target then appendError("Target object not found"); return true end
        local mtype = meshTypeFromString(meshTypeStr)
        local ok, mesh = pcall(function() local sm = Instance.new("SpecialMesh"); if mtype then sm.MeshType = mtype end; sm.Parent = target; return sm end)
        if not ok then appendError("Failed to create mesh"); return true end
        if meshSizeArg then
            local vec = safeEval(meshSizeArg)
            if vec and typeof(vec) == "Vector3" then pcall(function() mesh.Scale = vec end) end
        end
        appendSystem("Mesh created.")
        return true
    end

    -- /INSDECAL ("Parent","[Decal]","Transparency")
    if cmd == "INSDECAL" then
        local args = split_args_parentheses(rest)
        if #args < 2 then appendSystem('Usage: /InsDecal "Parent","rbxassetid://...", "Transparency"'); return true end
        local parentLocate, decalId, trans = args[1], args[2], args[3]
        local parent, err = resolveLocate(parentLocate)
        if not parent then appendError(("Parent resolve failed: %s"):format(tostring(err))); return true end
        local ok, dec = pcall(function() local d = Instance.new("Decal"); d.Texture = decalId; d.Parent = parent; if trans then d.Transparency = tonumber(trans) end; return d end)
        if not ok then appendError("Failed to create decal") else appendSystem("Decal added.") end
        return true
    end

    -- /INSSURFACEGUI ("Parent","[Direction]","SizeUDim2(x,y)(u,v)")
    if cmd == "INSSURFACEGUI" then
        local args = split_args_parentheses(rest)
        if #args < 3 then appendSystem('Usage: /InsSurfaceGui "Parent","Direction","UDim2(x,y, u,v)"'); return true end
        local parentLocate, dirStr, sizeStr = args[1], args[2], args[3]
        local parent, err = resolveLocate(parentLocate)
        if not parent then appendError(("Parent resolve failed: %s"):format(tostring(err))); return true end
        local face = Enum.NormalId.Front
        local d = dirStr:upper()
        if d:find("FRONT") then face = Enum.NormalId.Front end
        if d:find("BACK") then face = Enum.NormalId.Back end
        if d:find("LEFT") then face = Enum.NormalId.Left end
        if d:find("RIGHT") then face = Enum.NormalId.Right end
        if d:find("TOP") then face = Enum.NormalId.Top end
        if d:find("BOTTOM") then face = Enum.NormalId.Bottom end
        local sizer = nil
        local ok, s = pcall(function() return safeEval(sizeStr) end)
        if ok and s and (typeof(s) == "UDim2" or typeof(s) == "Vector2") then sizer = s end
        local ok2 = pcall(function() local sg = Instance.new("SurfaceGui"); sg.Face = face; sg.Parent = parent; sg.Name = "InsSurfaceGui"; sg.AlwaysOnTop = true; if sizer and typeof(sizer)=="UDim2" then sg.SizingMode = Enum.SurfaceGuiSizingMode.PixelsPerStud end end)
        if not ok2 then appendError("SurfaceGui creation failed") else appendSystem("SurfaceGui created.") end
        return true
    end

    -- /INSEFFECT ("Parent","EffectName","(R,G,B)","SizeVector")
    if cmd == "INSEFFECT" then
        local args = split_args_parentheses(rest)
        if #args < 2 then appendSystem('Usage: /InsEffect "Parent","EffectName","(R,G,B)","Vector3"'); return true end
        local parentLocate, effName, clr, sizeArg = args[1], args[2], args[3], args[4]
        local parent, err = resolveLocate(parentLocate)
        if not parent then appendError(("Parent resolve failed: %s"):format(tostring(err))); return true end
        local ok, inst = pcall(function() local e = Instance.new(effName); e.Parent = parent; return e end)
        if not ok or not inst then appendError("Failed to create effect"); return true end
        if clr then
            local c = parseRGBString(clr) or safeEval(clr)
            pcall(function() if inst.Color then inst.Color = c end end)
        end
        if sizeArg then local v = safeEval(sizeArg); if v and typeof(v)=="Vector3" then pcall(function() if inst.Size then inst.Size = v end end) end
        appendSystem("Effect created.")
        return true
    end

    -- /RECOLOR "locate", "(R,G,B)"
    if cmd == "RECOLOR" then
        local args = split_args_parentheses(rest)
        if #args < 2 then appendSystem('Usage: /ReColor ("locate","R,G,B")'); return true end
        local locate, colstr = args[1], args[2]
        local obj, err = resolveLocate(locate)
        if not obj then appendError(("Locate failed: %s"):format(tostring(err))); return true end
        local col = parseRGBString(colstr) or safeEval(colstr)
        if not col or typeof(col) ~= "Color3" then appendError("Color parse failed"); return true end
        pcall(function()
            if obj:IsA("BasePart") then obj.Color = col end
            if obj.BackgroundColor3 ~= nil then obj.BackgroundColor3 = col end
            if obj.TextColor3 ~= nil then obj.TextColor3 = col end
        end)
        appendSystem("Color applied.")
        return true
    end

    -- /RESIZE "locate", "SizeVector or UDim2"
    if cmd == "RESIZE" then
        local args = split_args_parentheses(rest)
        if #args < 2 then appendSystem('Usage: /ReSize ("locate","Vector3.new(...) or UDim2.new(...)")'); return true end
        local locate, sizeStr = args[1], args[2]
        local obj, err = resolveLocate(locate)
        if not obj then appendError(("Locate failed: %s"):format(tostring(err))); return true end
        local val, e = safeEval(sizeStr)
        if not val then appendError(("Size parse failed: %s"):format(tostring(e))); return true end
        pcall(function()
            if typeof(val) == "Vector3" and obj:IsA("BasePart") then obj.Size = val end
            if typeof(val) == "UDim2" and obj.BackgroundColor3 ~= nil then obj.Size = val end
        end)
        appendSystem("Resize applied.")
        return true
    end

    -- /POSITION "locate","Vector3 or UDim2"
    if cmd == "POSITION" then
        local args = split_args_parentheses(rest)
        if #args < 2 then appendSystem('Usage: /RePosition ("locate","Vector3.new(...) or UDim2.new(...)")'); return true end
        local locate, posStr = args[1], args[2]
        local obj, err = resolveLocate(locate)
        if not obj then appendError(("Locate failed: %s"):format(tostring(err))); return true end
        local val, e = safeEval(posStr)
        if not val then appendError(("Position parse failed: %s"):format(tostring(e))); return true end
        pcall(function()
            if typeof(val) == "Vector3" and obj:IsA("BasePart") then obj.CFrame = CFrame.new(val) end
            if typeof(val) == "UDim2" and obj.Position then obj.Position = val end
        end)
        appendSystem("Position applied.")
        return true
    end

    -- /DESTROY "locate"
    if cmd == "DESTROY" then
        local inside = try_parse_parentheses_content(rest) or trim(rest)
        if inside == "" then appendSystem('Usage: /Destroy ("locate")'); return true end
        local obj, err = resolveLocate(inside)
        if not obj then appendError(("Locate failed: %s"):format(tostring(err))); return true end
        pcall(function() obj:Destroy() end)
        appendSystem("Object destroyed.")
        return true
    end

    -- /TELEPORT or /TP "Vector3"
    if cmd == "TELEPORT" or cmd == "TP" then
        local inside = try_parse_parentheses_content(rest) or trim(rest)
        if inside == "" then appendSystem('Usage: /TP ("Vector3.new(x,y,z)")'); return true end
        local vec, err = safeEval(inside)
        if not vec or typeof(vec) ~= "Vector3" then appendError(("Vector parse failed: %s"):format(tostring(err))); return true end
        if LocalPlayer and LocalPlayer.Character then
            local hrp = LocalPlayer.Character:FindFirstChild("HumanoidRootPart") or LocalPlayer.Character.PrimaryPart
            if hrp then pcall(function() hrp.CFrame = CFrame.new(vec) end); appendSystem("Teleported.") else appendError("Cannot find HRP") end
        end
        return true
    end

    -- /REJOIN or /RJ
    if cmd == "REJOIN" or cmd == "RJ" then
        appendSystem("Rejoining...")
        pcall(function() TeleportService:Teleport(game.PlaceId, LocalPlayer) end)
        return true
    end

    -- /SERVERHOP or /SH "plalimit:NN"
    if cmd == "SERVERHOP" or cmd == "SH" then
        -- Basic approach: teleport to same place (may go to other server)
        appendSystem("Attempting server hop (simple teleport to same place)...")
        pcall(function() TeleportService:Teleport(game.PlaceId, LocalPlayer) end)
        return true
    end

    -- /HTTPASYNC true|false
    if cmd == "HTTPASYNC" then
        local v = try_parse_parentheses_content(rest) or trim(rest)
        if v == "" then appendSystem('Usage: /HttpAsync true|false') return true end
        local val = tostring(v):lower()
        STATE.HttpAsync = (val == "true")
        appendSystem("HttpAsync set to "..tostring(STATE.HttpAsync)); return true
    end

    -- /SHOWKEEP
    if cmd == "SHOWKEEP" then
        if #savedKeeps == 0 then appendSystem("No kept texts.") else
            appendSystem("Kept texts:")
            for i,t in ipairs(savedKeeps) do appendSystem(("%d: %s"):format(i, t)) end
        end
        return true
    end
    if cmd == "CLEARALLKEEP" or cmd == "CAK" then
        savedKeeps = {}
        appendSystem("All kept texts cleared.")
        return true
    end

    -- /SEECHAT or /ENAChat
    if cmd == "SEECHAT" or cmd == "ENACHAT" then enableSeeChat(); return true end
    if cmd == "UNSEECHAT" or cmd == "UNEACHAT" then disableSeeChat(); return true end

    -- /VIEW or /SPY "pla:Player" or "obj:locate"
    if cmd == "VIEW" then
        local inside = try_parse_parentheses_content(rest) or trim(rest)
        if inside == "" then appendSystem('Usage: /View ("pla:Name" or "obj:workspace.Part")'); return true end
        local kind, payload = inside:match("^(%w+)%s*:%s*(.+)$")
        if not kind then appendSystem('Format: pla:Name or obj:locate'); return true end
        if kind:lower() == "pla" then
            local pl = checkPlayerByName(payload)
            if not pl then appendSystem("Player not found"); return true end
            startViewTarget(pl); return true
        elseif kind:lower() == "obj" then
            local obj, err = resolveLocate(payload)
            if not obj then appendError("Locate failed: "..tostring(err)); return true end
            startViewTarget(obj); return true
        else appendSystem("Unknown view type"); return true end
    end
    if cmd == "UNVIEW" or cmd == "UNSPY" or cmd == "STOPVIEW" then stopViewTarget(); return true end

    -- /DEATHCOUNTS or /DEATHS ("pla:Name")
    if cmd == "DEATHCOUNTS" or cmd == "DEATHS" then
        local inside = try_parse_parentheses_content(rest) or trim(rest)
        if inside == "" then appendSystem('Usage: /DeathCounts ("pla:Name")'); return true end
        local kind, payload = inside:match("^(%w+)%s*:%s*(.+)$")
        if kind and kind:lower() == "pla" then
            local pl = checkPlayerByName(payload)
            if not pl then appendSystem("Player not found"); return true end
            local d = getDeathsForPlayer(pl)
            if d then appendSystem(("%s Deaths: %s"):format(pl.Name, tostring(d))) else appendSystem("Deaths info not available for "..pl.Name) end
            return true
        else
            appendSystem('Use: /DeathCounts ("pla:Name")'); return true
        end
    end

    -- /AADC true|false
    if cmd == "AADC" or cmd == "AUTOALLDEATHCOUNTS" then
        local v = try_parse_parentheses_content(rest) or trim(rest)
        if v == "" then appendSystem('Usage: /AADC true|false'); return true end
        local val = tostring(v):lower()
        STATE.autoAllDeathCounts = (val == "true")
        appendSystem("AutoAllDeathCounts -> "..tostring(STATE.autoAllDeathCounts))
        return true
    end

    -- /Translate "global:EN" or "global:TH"
    if cmd == "TRANSLATE" then
        local inside = try_parse_parentheses_content(rest) or trim(rest)
        if inside == "" then appendSystem('Usage: /Translate ("global:EN" or "global:TH" or "off")'); return true end
        if inside:lower() == "off" then STATE.translateGlobal = nil; appendSystem("Global translate disabled"); return true end
        local kind, lang = inside:match("^(%w+)%s*:%s*(%w+)$")
        if kind and kind:lower() == "global" and (lang:upper()=="EN" or lang:upper()=="TH") then
            STATE.translateGlobal = lang:upper()
            appendSystem("Global translate set to "..STATE.translateGlobal)
            return true
        else appendSystem('Usage: /Translate ("global:EN" or "global:TH" or "off")'); return true end
    end

    -- /HELP (brief list)
    if cmd == "HELP" then
        appendSystem("/API (\"sk-...\") - set API key")
        appendSystem("/APIJ (\"proj_xxx...\") - set Project ID")
        appendSystem("/Ins, /InsMesh, /InsDecal, /InsSurfaceGui, /InsEffect - create objects")
        appendSystem("/ReColor, /ReSize, /RePosition - change object properties")
        appendSystem("/Destroy (\"locate\") - remove")
        appendSystem("/TP (\"Vector3.new(...)\"), /Rejoin, /ServerHop")
        appendSystem("/View /UnView (pla: or obj:) - camera view")
        appendSystem("/SeeChat /UnSeeChat - player chat mirror")
        appendSystem("/ShowKeep /ClearAllKeep - manage saved notes")
        appendSystem("/Translate (global:EN/TH/off) - auto translate messages (uses OpenAI)")
        appendSystem("/HttpState (\"url\"), /HttpService, /HttpAsync true|false")
        return true
    end

    appendSystem(("Unknown command: /%s ‚Äî use /Help"):format(tostring(cmd)))
    return true
end

-- ---------- API/project buttons ----------
if projBtn and projBtn:IsA("TextButton") then
    projBtn.MouseButton1Click:Connect(function()
        local v = trim(projBox.Text or "")
        if v == "" then appendError("Project ID empty."); return end
        if not tostring(v):match("^proj[_%-]") then appendError("Project ID should start with proj_"); return end
        STATE.PROJECT_ID = v; projFrame.Visible = false; apiFrame.Visible = true; appendSystem("Project saved. Enter API next.")
    end)
    projBox.FocusLost:Connect(function(enter) if enter then projBtn:CaptureFocus(); projBtn:MouseButton1Click() end end)
end
if apiBtn and apiBtn:IsA("TextButton") then
    apiBtn.MouseButton1Click:Connect(function()
        local raw = trim(apiBox.Text or "")
        if raw == "" then appendError("API empty."); return end
        STATE.OPENAI_KEY = raw; appendSystem("API saved (client). Use /APIJ if needed.")
        -- optional: validate later on request
    end)
    apiBox.FocusLost:Connect(function(enter) if enter then apiBtn:MouseButton1Click() end end)
end

-- ---------- sendChat ----------
local function sendChat()
    local text = tostring(chatBox.Text or "")
    if text:match("^%s*$") then return end
    if text:sub(1,1) == "/" then
        if handleCommand(text) then chatBox.Text = ""; return end
    end
    if not STATE.OPENAI_KEY or STATE.OPENAI_KEY == "" then appendError("Error HttpService: Did you forget to put API?"); chatBox.Text = ""; return end
    if STATE.requestInFlight then appendSystem("Waiting for previous response."); return end
    local msg = trim(text)
    appendChat(true, msg)
    chatBox.Text = ""
    STATE.requestInFlight = true
    sendBtn.Active = false; sendBtn.AutoButtonColor = false; sendBtn.BackgroundColor3 = Color3.fromRGB(180,180,180)
    local thinkingFrame = appendChat(false, "[System] ‚åõ Thinking...", {200,200,255}, true)
    task.spawn(function()
        local reply, err = callOpenAI_debug(msg, STATE.OPENAI_KEY, STATE.PROJECT_ID)
        pcall(function()
            if thinkingFrame and thinkingFrame.Parent then thinkingFrame:Destroy() end
            STATE.requestInFlight = false
            sendBtn.Active = true; sendBtn.AutoButtonColor = true; sendBtn.BackgroundColor3 = Color3.fromRGB(86,170,255)
        end)
        if reply then appendChat(false, reply) else appendError(("Error: %s"):format(tostring(err or "unknown"))) end
    end)
end
pcall(function() if sendBtn and sendBtn:IsA("TextButton") then sendBtn.MouseButton1Click:Connect(sendChat) end end)
pcall(function() if chatBox and chatBox:IsA("TextBox") then chatBox.FocusLost:Connect(function(enter) if enter then sendChat() end end) end end)

-- ---------- toggle panel ----------
local panelOpen = false
local function togglePanel()
    panelOpen = not panelOpen
    if panelOpen then safeTween(gptGui, { Position = UDim2.new(0,0,0.05,0) }, 0.28) else safeTween(gptGui, { Position = UDim2.new(-0.4,0,0.05,0) }, 0.28) end
end
if gpt and (gpt:IsA("ImageButton") or gpt:IsA("TextButton")) then
    pcall(function() gpt.MouseButton1Click:Connect(togglePanel) end)
else
    appendDebug("Toggle not bound; use togglePanel() to open.")
end

-- startup note
appendSystem("ChatGPT upgraded ready. Use /Help for commands.")

-- schedule auto death if enabled
RunService.Heartbeat:Connect(function(dt)
    if STATE.autoAllDeathCounts then
        -- run periodically: every ~10s (cheap heuristic)
        if math.floor(tick()) % 10 == 0 then autoAllDeathsReport() end
    end
end)

-- expose useful things
_G.ChatGPT_STATE = STATE
_G.ChatGPT_appendChat = appendChat
_G.ChatGPT_togglePanel = togglePanel
